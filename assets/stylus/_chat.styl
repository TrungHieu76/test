/////////////////
.chat-areas
	background-color #ffffff
	position absolute
	right 0
	top 0
	bottom 90px
	width 353px
	z-index 20
	+sp()
		position fixed
		width auto
		left 0
		right 0
		top 0
		bottom 0
		z-index 50

	.btnClose
		display flex
		justify-content center
		align-items center
		position absolute
		left 0
		right 0
		top 0
		height 75px
		+sp()
			display none

	.chat-scroll
		position absolute
		left 0
		right 0
		top 75px
		bottom 85px
		overflow auto
		padding 0 20px
		+sp()
			top 54px
			padding 20px

	.submit-area
		position absolute
		left 0
		right 0
		bottom 0
		height 85px
		border-top 1px solid #3C3C3C
		display flex
		justify-content center
		align-items center

		.submit-area-form
			border 1px solid #4B4B4B
			width 290px
			height 48px
			border-radius 24px
			overflow hidden
			position relative
			input
				display block
				width 100%
				height 100%
				border none
				outline none
				padding-left 20px
				padding-right 45px
			button
				position absolute
				right 5px
				top 5px
				border none
				background-color transparent
				outline none
				i
					px(34)
				&[disabled]
					color #D0D0D0


	.user-post
		display flex
		margin-bottom 30px
		figure
			padding-top 25px
			img
				width 32px
		.msg
			margin-left 10px
			.name
				px(10)
				margin-bottom 10px

			ul
				li
					span
						display inline-block
						background-color #F0F0F0
						padding 9px
						px(12)
						margin-bottom 3px
						border-radius 4px 16px 16px 4px
					&:first-child span
						border-radius 16px 16px 16px 4px
					&:last-child span
						border-radius 4px 16px 16px 16px

	.my-post
		display flex
		margin-bottom 30px
		justify-content flex-end
		figure
			padding-top 25px
			img
				width 32px
		.msg
			margin-right 10px
			.name
				px(10)
				margin-bottom 10px
				text-align right

			ul
				li
					text-align right
					span
						display inline-block
						background-color #F8F2C1
						padding 9px
						px(12)
						margin-bottom 3px
						border-radius 16px 4px 4px 16px
					&:first-child span
						border-radius 16px 16px 4px 16px
					&:last-child span
						border-radius 16px 4px 16px 16px