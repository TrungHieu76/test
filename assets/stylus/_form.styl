/////////
.form-area
	padding 60px 0 120px 0
	h2
		px(24)
		margin-bottom 35px
		text-align center

	h3
		padding 0 0 0 5px
		border-left 5px solid #EB5428
		margin-bottom 15px
		+sp()
			px(14)

	.txt
		text-align center
		margin-bottom 63px
		px(14)
		+sp()
			text-align left


.form-block
	background-color #ffffff
	padding 55px 110px
	border-radius 14px
	+sp()
		padding 25px

	table
		width 100%
		margin-bottom 80px
		th
			text-align left
			px(14)
			font-weight normal
			padding 10px 0
			width 30%
			+sp()
				display block
				padding-bottom 0
		td
			padding 10px 0
			+sp()
				display block
			input
				width 350px
				height 44px
				border 1px solid #707070
				border-radius 5px
				+sp()
					width 100%

	.agree
		border 1px solid #707070
		padding 12px
		height 260px
		overflow auto
		margin-bottom 20px
		px(12)
		line-height 2

		.name
			text-align right
			bold()

	.btnAgree
		text-align center
		+sp()
			px(12)
		label
			display inline-block
			margin-bottom 50px
			input
				display none
			input + span
				display inline-block
				width 20px
				height 20px
				border 1px solid #707070
				border-radius 3px
				vertical-align middle
				margin-right 10px
				position relative
			input:checked + span
				&:after
					content ""
					display block
					width 6px
					height 9px
					border-right 2px solid #43536A
					border-bottom 2px solid #43536A
					transform rotate(45deg)
					position absolute
					left 6px
					top 4px

	.btnSubmit
		display flex
		justify-content center
		align-items center
		width 400px
		height 72px
		border-radius 5px
		background-color #AF4728
		color #ffffff
		text-decoration none
		margin 0 auto
		px(20)
		bold()
		+sp()
			px(14)
			width 100%
			height 48px
		&:hover
			background-color #EB5428

