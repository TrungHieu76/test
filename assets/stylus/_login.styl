/////////////////////
.login-form
	display flex
	color #444444
	+sp()
		display block
		padding 0
	h2
		px(24)
		margin-bottom 40px

	.txt
		margin-bottom 47px

	.join-form
		background-color #ffffff
		border-radius 5px
		padding 41px 75px
		+sp()
			background-color transparent
			padding 0 0 41px 0

		dl
			display flex
			align-items center
			margin-bottom 46px
			+sp()
				display block
			dt
				color #000000
				px(14)
				margin-right 26px
				+sp()
					display none
			dd
				input
					width 332px
					height 44px
					border 1px solid #DDDDDD
					border-radius 4px
					padding-left 28px
					+sp()
						width 100%
						background transparent url("../img/ico_link.svg") no-repeat 5px center
						border none
						border-bottom 1px solid #dddddd
						border-radius 0
					&::placeholder
						color #979797
						px(14)

		.btnJoin
			display flex
			justify-content center
			align-items center
			width 100%
			height 72px
			border-radius 5px
			background-color #AF4728
			color #ffffff
			text-decoration none
			px(20)
			bold()
			+sp()
				height 48px
				px(14)
				width 90%
				margin 0 auto
			&:hover
				background-color #EB5428
	.members
		margin-left 45px
		border-radius 5px
		background-color #ffffff
		position relative
		width 340px
		+sp()
			width auto
			position static
			margin-left 0
			padding 20px

		.member-scroll
			position absolute
			left 47px
			right 60px
			top 25px
			bottom 0
			overflow auto
			+sp()
				position static
				height 300px

		.tit
			px(18)
			margin-bottom 25px
			+sp()
				bold()

		ul
			width 100%
			li
				display flex
				margin-bottom 30px
				dl
					margin-left 9px
					dd
						px(14)
						color #BABABA
