.modal-exit
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	z-index 30
	display flex
	justify-content center
	align-items center
	.window
		background-color #ffffff
		border-radius 14px
		padding 70px 90px
		max-width 674px
		width 100%
		box-shadow 0 0 20px rgba(0,0,0,0.2)
		+sp()
			position fixed
			left 15px
			right 15px
			bottom 100px
			padding 50px 35px
			width auto

		h2
			px(24)
			text-align center
			margin-bottom 50px
			+sp()
				px(20)

		p
			text-align center
			margin-bottom 55px

		.btns
			display flex
			justify-content space-between
			+sp()
				flex-direction column-reverse
			li
				+sp()
					text-align center
					margin-bottom 15px
				button
					width 218px
					height 65px
					border-radius 8px
					border none
					px(18)
					bold()
					+sp()
						height 48px
						px(14)
					&.cancel
						color #707070
						background-color #ffffff
						border 1px solid #484848
						&:hover
							border 1px solid #484848
							background-color #484848
							color #ffffff
					&.ok
						color #ffffff
						background-color #A94427
						&:hover
							background-color #EB5428
