.modal-display-share
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	z-index 30
	display flex
	justify-content center
	align-items center

	.window
		background-color #ffffff
		border-radius 5px
		padding 25px
		max-width 640px
		width 100%
		position fixed
		left 0
		right 0
		top 0
		margin auto
		+sp()
			bottom 0
			border-radius 0

		h2
			px(18)
			font-weight normal
			margin-bottom 15px
		.txt
			+sp()
				px(14)
		.tab
			display flex
			justify-content space-between
			border-bottom 1px solid #dddddd
			li
				text-align center
				padding 10px 20px
				position relative
				+sp()
					px(12)
					padding 10px 5px
				&.act
					color #1A73E8
					&:after
						content ""
						position absolute
						left 0
						bottom 0
						display block
						width 100%
						height 3px
						background-color #1A73E8

	.display-share-scroll
		border 1px solid #dddddd
		height 340px
		overflow auto
		padding 15px
		margin-bottom 25px
		+sp()
			height 50vh

	.block
		display flex
		flex-wrap wrap

		li
			width calc(33.3% - 6px)
			margin 0 3px 25px 3px
			+sp()
				width calc(50% - 6px)
			figure
				margin-bottom 5px
				img
					width 100%
			.tit
				px(14)
				overflow hidden
				text-overflow ellipsis
				white-space nowrap
				img
					display inline-block
					vertical-align middle
					margin-right 3px
					transform translate(0,-2px)

	.btns
		text-align right
		li
			display inline-block
			button
				width 95px
				height 32px
				border-radius 5px
				border 1px solid #dddddd
				background-color #ffffff
			&:last-child
				button
					background-color #EAEAEA


		li + li
			margin-left 20px
