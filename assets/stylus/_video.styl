.video-area.others
	background-color #212935
	display flex
	justify-content center
	align-items center
	dl
		display flex
		+sp()
			flex-flow column
			justify-content center
			align-items center
			height 100%
			img
				width 32px

		dd
			margin-left 25px
			px(35)
			color #808080
			+sp()
				margin-left 0
				px(14)


	[data-pin] &
		dl
			dt
				line-height 1
				img
					width 32px
			dd
				px(20)
				margin-left 5px

.video-area.share
	background-color #A8A8A8
	display flex
	justify-content center
	align-items center
	.share-area
		figure
			text-align center
			margin-bottom 30px
			+sp()
				margin-bottom 15px
				line-height 1
			img
				+sp()
					width 60px
		.tit
			color #ffffff
			px(22)
			margin-bottom 40px
			text-align center
			+sp()
				margin-bottom 20px
		ul
			display flex
			li
				input
					border none
					width 225px
					border-radius 4px
					padding 5px 10px 5px 25px
					color #777777
					background #ffffff url("../img/ico_rock.png") no-repeat 5px center
					background-size 11px 14px

				button
					border none
					background-color #E58150
					color #ffffff
					padding 7px 15px
					border-radius 4px

			li + li
				margin-left 15px