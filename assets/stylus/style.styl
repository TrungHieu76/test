.room-tab
	display flex
	position absolute
	justify-content space-between
	left 23px
	right 23px
	top 0

	+sp()
		position static
		border-bottom 1px solid #dddddd

	li
		text-indent -9999px
		overflow hidden
		margin 0
		padding 0 !important
		height 0

		+sp()
			text-indent 0
			height auto
			width 50% !important
			justify-content center
			border none !important
			display flex
			align-items center
			padding 15px 0 !important

		&.act:first-child
			width 228px
			border-bottom 4px solid #A2A2A2
			position relative
			&:after
				+sp()
					content ""
					position absolute
					display block
					width 56px
					height 4px
					background-color #43536A
					left 50%
					bottom 0
					transform translate(-50%,0)



		&.act:last-child
			width 61px
			border-bottom 4px solid #A2A2A2
			position relative
			&:after
				+sp()
					content ""
					position absolute
					display block
					width 56px
