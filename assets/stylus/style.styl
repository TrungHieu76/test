				px(24)
				display inline-block
				vertical-align middle
				margin-right 5px
				line-height 0
				color #022465

	.block
		display none
		&.act
			display block

	.sel
		margin-bottom 25px
		.tit
			margin-bottom 10px
		select
			display block
			width 100%
			height 35px
			border-bottom 1px solid #dddddd

	.btnOk
		display flex
		justify-content center
		align-items center
		width 142px
		height 38px
		background-color #ffffff
		color #484848
		border 1px solid #484848
		text-decoration none
		margin 30px auto 0 auto
		border-radius 8px
		&:hover
			color #ffffff
			background-color #484848

