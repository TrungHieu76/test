@import "_form.styl"

html,body,#container
	position absolute
	left 0
	top 0
	width 100vw
	height 100vh
	overflow hidden

body
	color #484848
	font-family: "Helvetica Neue", Arial, "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
	line-height 1.6

#container
	background-color #43536A
	&.form
		overflow auto
		background-color #EBEBEB


#main
	display flex
	justify-content center
	align-items center
	position absolute
	flex-wrap wrap
	left 0
	right 0
	top 110px
	bottom 90px
	padding 15px
	z-index 2
	&.login
		top 77px
		background-color #EBEBEB
		padding 35px

		+sp()
			top 53px
			bottom 0
			overflow auto
			display block


	.form &
		position static
		max-width 803px
		width 100%
		margin 0 auto
		+sp()
			display block



