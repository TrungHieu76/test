.main-setting
	position absolute
	right 20px
	bottom 100px
	z-index 10
	background-color #ffffff
	width 364px
	height 437px
	padding 25px
	border-radius 14px
	+sp()
		border-radius 0
		left 0
		right 0
		top 0
		bottom 0
		width auto
		height auto
		padding-top 80px



	.tab
		display flex
		justify-content center
		border-bottom 1px solid #dddddd
		margin-bottom 25px
		+sp()
			justify-content space-between
		li
			margin 0 10px
			height 40px
			px(14)
			position relative
			&.act
				color #212935
