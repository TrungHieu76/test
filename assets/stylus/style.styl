	position absolute
	top 125px
	left 22px
	bottom 100px
	background-color rgba(0,0,0,0.7)
	width 343px
	padding 33px
	color #ffffff
	z-index 10
	px(14)
	overflow auto
	border-radius 12px
	+sp()
		left 0
		right 0
		top 0
		bottom 0
		border-radius 0
		width auto
		background-color #ffffff
		color #4b4b4b
		padding 75px 23px 33px 23px
		overflow hidden

	h2
		px(18)
		padding 0
		margin 0 0 10px 0
		+sp()
			display none


	.btnClose
		position absolute
		left 0
		right 0
		bottom 0
		display flex
		justify-content center
		align-items center
		height 60px
		color #ffffff
		px(20)

	.member-scroll
		position absolute
		left 33px
		right 33px
		top 65px
		bottom 60px
		overflow auto
		+sp()
			top 140px
			bottom 20px
		ul
			li
				display flex
				align-items center
				padding 14px 10px 14px 40px
				position relative

				i
					position absolute
					left 0
					top 50%
					transform translate(0,-50%)
					px(45)
					display inline-block
					line-height 0
					+sp()
						color #707070

				.name
					margin-left 11px
					span
						px(14)
						display block
						color #BCBCBC

